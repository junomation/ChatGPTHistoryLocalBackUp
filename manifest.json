{
  "manifest_version": 2,
  "name": "My Extension",
  "version": "1.0",
  "description": "This extension saves a specific element's HTML of the current page",
  "permissions": [
    "tabs",
    "activeTab",
    "storage",
    "downloads"
  ],
  "browser_action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://chat.openai.com/*"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}